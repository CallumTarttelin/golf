{
  "extends": "eslint:recommended",
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    // React
    "react/display-name": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-string-refs": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/no-unknown-property": 2,
    // Best practice
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-extend-native": 2,
    "no-caller": 2,
    "no-multi-spaces": 2,
    // Style
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-spacing": [
      2,
      {"after": true}
    ],
    "object-curly-spacing": 2,
    "curly": 2,
    "semi": 2,
    "quotes": [
      2,
      "single"
    ],
    "space-in-parens": 2,
    "array-bracket-spacing": 2,
    // ES6 Style
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "arrow-spacing": 2
  }
}
